<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="InfoResult"
            type="com.rascarlo.aurdroid.api.model.InfoResult" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_result_text_view_pkgname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{InfoResult.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="?attr/colorAccent"
            android:textStyle="bold"
            android:visibility="@{InfoResult.name != null ? View.VISIBLE : View.GONE}"
            tools:text="Pkgname" />

        <View
            android:id="@+id/info_result_ruler_pkgname"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorAccent"
            android:visibility="@{InfoResult.name != null ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/info_result_text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{InfoResult.description}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:visibility="@{InfoResult.description != null ? View.VISIBLE : View.GONE}"
            tools:text="@string/app_name" />

    </LinearLayout>

</layout>